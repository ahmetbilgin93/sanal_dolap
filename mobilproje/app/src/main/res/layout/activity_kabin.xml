<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KabinActivity">

    <Button
        android:id="@+id/paylasKombin"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D500F9"
        android:fontFamily="@font/laila_light"
        android:text="Paylaş"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.752"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAyak" />

    <Button
        android:id="@+id/addKombin"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D500F9"
        android:fontFamily="@font/laila_light"
        android:text="Kaydet"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAyak" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addUst2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="#D500F9"
        app:layout_constraintBottom_toBottomOf="@+id/imgUst2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgUst2"
        app:layout_constraintTop_toTopOf="@+id/imgUst2"
        app:rippleColor="#fff"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addAlt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="#D500F9"
        app:layout_constraintBottom_toBottomOf="@+id/imgAlt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAlt"
        app:layout_constraintTop_toTopOf="@+id/imgAlt"
        app:rippleColor="#fff"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addAyak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="#D500F9"
        app:layout_constraintBottom_toBottomOf="@+id/imgAyak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAyak"
        app:layout_constraintTop_toTopOf="@+id/imgAyak"
        app:rippleColor="#fff"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addUst1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="#D500F9"
        app:layout_constraintBottom_toBottomOf="@+id/imgUst1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgUst1"
        app:layout_constraintTop_toTopOf="@+id/imgUst1"
        app:rippleColor="#fff"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ImageView
        android:id="@+id/imgBas"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imgUst1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBas"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imgUst2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgUst1"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imgAlt"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgUst2"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imgAyak"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAlt"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/laila_bold"
        android:text="Basüstü"
        android:textColor="@android:color/holo_purple"
        app:layout_constraintBottom_toBottomOf="@+id/imgBas"
        app:layout_constraintEnd_toStartOf="@+id/imgBas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgBas" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/laila_bold"
        android:text="Ust Vucut"
        android:textColor="@android:color/holo_purple"
        app:layout_constraintBottom_toBottomOf="@+id/imgUst1"
        app:layout_constraintEnd_toStartOf="@+id/imgUst1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgUst1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/laila_bold"
        android:text="Ust Vucut"
        android:textColor="@android:color/holo_purple"
        app:layout_constraintBottom_toBottomOf="@+id/imgUst2"
        app:layout_constraintEnd_toStartOf="@+id/imgUst2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgUst2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/laila_bold"
        android:text="Alt Vucut"
        android:textColor="@android:color/holo_purple"
        app:layout_constraintBottom_toBottomOf="@+id/imgAlt"
        app:layout_constraintEnd_toStartOf="@+id/imgAlt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgAlt" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/laila_bold"
        android:text="Ayak"
        android:textColor="@android:color/holo_purple"
        app:layout_constraintBottom_toBottomOf="@+id/imgAyak"
        app:layout_constraintEnd_toStartOf="@+id/imgAyak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgAyak" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addBas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="#D500F9"
        app:layout_constraintBottom_toBottomOf="@+id/imgBas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgBas"
        app:layout_constraintTop_toTopOf="@+id/imgBas"
        app:rippleColor="#fff"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <TextView
        android:id="@+id/showAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/laila_bold"
        android:text="Kayıtlı Tüm Kombinleri Görüntüle >>>"
        android:textColor="@android:color/holo_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addKombin"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>