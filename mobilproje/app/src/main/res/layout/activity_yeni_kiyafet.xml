<?xml version="1.0" encoding="utf-8"?>



<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:scrollbars="vertical"
    tools:context=".yeniKiyafetActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-127dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cekmeceText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/laila_light"
                android:text="Yeni Kıyafet"
                android:textColor="@android:color/holo_purple"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/fotosu"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cekmeceText2"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/kiyafetSec"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#D500F9"
                android:fontFamily="@font/laila_light"
                android:text="Kiyafet Fotoğrafı Yükle"
                android:textColor="#fff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/turu"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#AB47BC"
                android:ems="10"
                android:hint="Kıyafet Türü"
                android:inputType="textPersonName"
                android:textColor="@android:color/holo_purple"
                android:textColorHighlight="@android:color/holo_purple"
                android:textColorHint="@android:color/holo_purple"
                android:textColorLink="#AB47BC"
                android:textCursorDrawable="@android:color/holo_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fotosu" />

            <EditText
                android:id="@+id/rengi"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#AB47BC"
                android:ems="10"
                android:hint="Kıyafet Rengi"
                android:inputType="textPersonName"
                android:textColor="@android:color/holo_purple"
                android:textColorHighlight="@android:color/holo_purple"
                android:textColorHint="@android:color/holo_purple"
                android:textColorLink="#AB47BC"
                android:textCursorDrawable="@android:color/holo_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/turu" />

            <EditText
                android:id="@+id/deseni"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#AB47BC"
                android:ems="10"
                android:hint="Kıyafet Deseni"
                android:inputType="textPersonName"
                android:textColor="@android:color/holo_purple"
                android:textColorHighlight="@android:color/holo_purple"
                android:textColorHint="@android:color/holo_purple"
                android:textColorLink="#AB47BC"
                android:textCursorDrawable="@android:color/holo_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rengi" />

            <EditText
                android:id="@+id/fiyati"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#AB47BC"
                android:ems="10"
                android:hint="Fiyatı"
                android:inputType="textPersonName"
                android:textColor="@android:color/holo_purple"
                android:textColorHighlight="@android:color/holo_purple"
                android:textColorHint="@android:color/holo_purple"
                android:textColorLink="#AB47BC"
                android:textCursorDrawable="@android:color/holo_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tarihi" />

            <EditText
                android:id="@+id/tarihi"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#AB47BC"
                android:ems="10"
                android:hint="Alınma Tarihi"
                android:inputType="textPersonName"
                android:textColor="@android:color/holo_purple"
                android:textColorHighlight="@android:color/holo_purple"
                android:textColorHint="@android:color/holo_purple"
                android:textColorLink="#AB47BC"
                android:textCursorDrawable="@android:color/holo_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/deseni" />

            <Button
                android:id="@+id/addKiyafet"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="60dp"
                android:background="#D500F9"
                android:fontFamily="@font/laila_light"
                android:text="Yeni Kiyafeti Ekle"
                android:textColor="#fff"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fiyati"
                app:layout_constraintVertical_bias="0.015" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>