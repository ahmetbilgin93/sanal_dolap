<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="12dp"
    android:gravity="center"
    android:outlineAmbientShadowColor="@android:color/holo_purple"
    android:outlineSpotShadowColor="@android:color/holo_purple"
    android:padding="12dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/etkinlikCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@android:color/holo_purple">


            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/laila_bold"
                android:text="Etkinlik Ismi:"
                android:textColor="@android:color/holo_purple"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.087"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/laila_bold"
                android:text="Lokasyonu:"
                android:textColor="@android:color/holo_purple"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.087"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/laila_bold"
                android:text="Etkinlik T端r端:"
                android:textColor="@android:color/holo_purple"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.087"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/laila_bold"
                android:text="Tarihi:"
                android:textColor="@android:color/holo_purple"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.087"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/laila_light"
                android:text="Etkinlik Ismi Buraya "
                android:textColor="@android:color/holo_purple"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.91"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:fontFamily="@font/laila_light"
                android:text="Etkinlik T端r端 Buraya"
                android:textColor="@android:color/holo_purple"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.91"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/t1"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:fontFamily="@font/laila_light"
                android:text="Tarih Buraya"
                android:textColor="@android:color/holo_purple"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.91"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/t3"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:fontFamily="@font/laila_light"
                android:text="Lokasyon Buraya"
                android:textColor="@android:color/holo_purple"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.91"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/t2"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tikla"
                android:layout_width="380dp"
                android:layout_height="163dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>